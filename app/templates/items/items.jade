div(ng-repeat="item in model.items")
    h3 {{item.title}}
    a.btn.btn-primary.pull-right.vote-icon(ng-click="vote(item.id)")
        img(src='images/up-vote-icon.png')
           | Vote
    p {{item.description}}
    p(ng-show="item.name_speaker")
        strong Speaker: {{item.name_speaker}}
    ul
        li(ng-repeat="p in item.people") {{p}}